<UserControl x:Class="SparkControls.IndiSendSoOn"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SparkControls"
             mc:Ignorable="d" 
                          d:DesignHeight="150" d:DesignWidth="125"
             Background="#FFDADADA"
             BorderBrush="Black" 
             BorderThickness="2">
  <Grid Style="{DynamicResource IndiBack}">
    <Grid.RowDefinitions>
      <RowDefinition Height="1*"/>
      <RowDefinition Height="3*"/>
    </Grid.RowDefinitions>
    <Grid Grid.Row="0">
      <Viewbox Grid.Column="0">
        <Label Content="Команда &quot;Пуск&quot;" Style="{DynamicResource LabelStyle}"/>
      </Viewbox>
    </Grid>
    <Button x:Name="btn" Grid.Row="1" Margin="15" Click="Button_Click" IsEnabled="False"
            Style="{DynamicResource ButtonStyle}">
      <Viewbox>
        <Label Content="Отправить" Style="{DynamicResource LabelStyle}"/>
      </Viewbox>
    </Button>
  </Grid>
</UserControl>
