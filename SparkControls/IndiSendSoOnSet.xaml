<Window x:Class="SparkControls.IndiSendSoOnSet"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SparkControls"
        mc:Ignorable="d"
         Title="Настройки команды &quot;Пуск&quot;"
        Height="125" Width="290"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
         Loaded="Window_Loaded">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition/>
      <RowDefinition Height="34"/>
    </Grid.RowDefinitions>
    <StackPanel Margin="10 0">
      <Grid  Margin="0 20">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="auto"/>
          <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Content="Вход" HorizontalAlignment="Center" Margin="10 0"/>
        <ComboBox x:Name="cbParam" 
                      Grid.Column="1"
                      Margin="2"
                      DisplayMemberPath="Title"/>
      </Grid>
    </StackPanel>
    <StackPanel Grid.Row="5" Grid.ColumnSpan="2">
      <Button Content="Применить" 
                    HorizontalAlignment="Center" 
                    Margin="5,5,5,5" 
                    Padding="10 2 10 2"  
                    Click="Button_Click"/>
    </StackPanel>
  </Grid>
</Window>
